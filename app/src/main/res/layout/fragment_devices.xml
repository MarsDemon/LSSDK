<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/devices_bar_statue"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/red1"
        android:fitsSystemWindows="true" />

    <longse.com.herospeed.widget.TitleView
        android:id="@+id/devices_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devices_bar_statue"
        android:background="@color/red1"
        app:rightIcon="@drawable/point"
        app:title="@string/userdevice"
        app:titleColor="@color/white"
        app:titleSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/device_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/devices_title" />

</RelativeLayout>